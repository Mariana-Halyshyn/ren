import SwiftUI

struct WeatherDetailView: View {
    @ObservedObject var viewModel: WeatherViewModel
    @ObservedObject var favoritesVM: FavoritesViewModel
    
    @State private var cityInput = ""
    @State private var showMenu = false
    
    var body: some View {
        ZStack {
            Color(red: 0.93, green: 0.95, blue: 1.0)
                .ignoresSafeArea()
            
            VStack(alignment: .leading, spacing: 16) {
                
                // MARK: - Top bar
                HStack {
                    Button {
                        showMenu.toggle()
                    } label: {
                        Image(systemName: "line.3.horizontal")
                            .font(.title2)
                    }
                    
                    Spacer()
                    
                    Text(viewModel.currentWeather?.name ?? "ÐŸÐ¾Ð³Ð¾Ð´Ð°")
                        .font(.headline)
                    
                    Spacer()
                }
                .padding(.horizontal)
                
                // MARK: - Search
                HStack {
                    TextField("Ð’Ð²ÐµÐ´Ñ–Ñ‚ÑŒ Ð¼Ñ–ÑÑ‚Ð¾", text: $cityInput)
                        .padding(10)
                        .background(Color.white)
                        .cornerRadius(8)
                    
                    Button("ÐŸÐ¾ÑˆÑƒÐº") {
                        viewModel.fetchWeather(city: cityInput, lat: nil, lon: nil)
                        cityInput = ""
                        UIApplication.shared.endEditing()
                    }
                    .padding(.horizontal)
                    .padding(.vertical, 10)
                    .background(Color.yellow)
                    .cornerRadius(8)
                }
                .padding(.horizontal)
                
                // MARK: - Current weather (TEXT LEFT, ICON RIGHT)
                if let weather = viewModel.currentWeather {
                    HStack {
                        VStack(alignment: .leading, spacing: 6) {
                            Text("\(Int(weather.main.temp))Â°")
                                .font(.system(size: 60, weight: .bold))
                            
                            Text(weather.weather.first?.description.capitalized ?? "")
                                .font(.title3)
                            
                            Text("ðŸ“ \(weather.name)")
                                .foregroundColor(.gray)
                        }
                        
                        Spacer()
                        
                        Image(systemName: weather.weather.first?.iconNameSF ?? "cloud")
                            .font(.system(size: 60))
                    }
                    .padding(.horizontal)
                }
                
                // MARK: - Hourly forecast
                Text("ÐŸÐ¾Ð³Ð¾Ð´Ð¸Ð½Ð½Ð¸Ð¹ Ð¿Ñ€Ð¾Ð³Ð½Ð¾Ð·")
                    .font(.headline)
                    .padding(.horizontal)
                
                ScrollView(.horizontal, showsIndicators: false) {
                    HStack(spacing: 12) {
                        ForEach(viewModel.forecastItems, id: \.dt) { item in
                            VStack(spacing: 6) {
                                Text(hourString(from: item.date))
                                    .font(.caption)
                                
                                Image(systemName: item.weatherIconName)
                                
                                Text("\(Int(item.main.temp))Â°")
                            }
                            .padding(10)
                            .background(Color.white)
                            .cornerRadius(10)
                        }
                    }
                    .padding(.horizontal)
                }
                
                // MARK: - Weather explanation (TEXT ONLY)
                if let main = viewModel.currentWeather?.weather.first?.main {
                    Text(weatherAdvice(for: main))
                        .padding()
                        .background(Color.white)
                        .cornerRadius(12)
                        .padding(.horizontal)
                }
                
                // MARK: - 5 day forecast (without today)
                Text("5-Ð´ÐµÐ½Ð½Ð¸Ð¹ Ð¿Ñ€Ð¾Ð³Ð½Ð¾Ð·")
                    .font(.headline)
                    .padding(.horizontal)
                
                VStack(spacing: 8) {
                    ForEach(viewModel.dailyForecast.dropFirst(), id: \.dt) { item in
                        HStack {
                            Text(item.dayOfWeekShort)
                            Spacer()
                            Image(systemName: item.weatherIconName)
                            Text("\(Int(item.main.temp))Â°")
                        }
                        .padding()
                        .background(Color.white)
                        .cornerRadius(8)
                    }
                }
                .padding(.horizontal)
                
                Spacer()
            }
        }
        .onAppear {
            viewModel.requestUserLocation()
        }
    }
    
    // MARK: - Helpers
    
    private func hourString(from date: Date) -> String {
        let f = DateFormatter()
        f.dateFormat = "HH:mm"
        return f.string(from: date)
    }
    
    // â— Ð‘Ð•Ð— "Ð¥Ð¼Ð°Ñ€Ð½Ð¾:", "Ð¡Ð¾Ð½ÑÑ‡Ð½Ð¾:"
    private func weatherAdvice(for condition: String) -> String {
        switch condition.lowercased() {
        case "clear":
            return "Ð¡ÑŒÐ¾Ð³Ð¾Ð´Ð½Ñ– ÑÐ¾Ð½ÑÑ‡Ð½Ð¾ Ñ‚Ð° Ñ‚ÐµÐ¿Ð»Ð¾ â€” Ñ–Ð´ÐµÐ°Ð»ÑŒÐ½Ð¸Ð¹ Ð´ÐµÐ½ÑŒ Ð´Ð»Ñ Ð¿Ñ€Ð¾Ð³ÑƒÐ»ÑÐ½Ð¾Ðº."
        case "clouds":
            return "ÐÐ° Ð½ÐµÐ±Ñ– Ñ…Ð¼Ð°Ñ€Ð¸, Ð°Ð»Ðµ Ð±ÐµÐ· Ð¾Ð¿Ð°Ð´Ñ–Ð² â€” Ð¿Ð¾Ð³Ð¾Ð´Ð° ÑÐ¿Ð¾ÐºÑ–Ð¹Ð½Ð°."
        case "rain":
            return "Ð¡ÑŒÐ¾Ð³Ð¾Ð´Ð½Ñ– Ð´Ð¾Ñ‰Ð¸Ñ‚Ð¸Ð¼Ðµ, Ð½Ðµ Ð·Ð°Ð±ÑƒÐ´ÑŒÑ‚Ðµ Ð¿Ñ€Ð¸Ñ…Ð¾Ð¿Ð¸Ñ‚Ð¸ Ð¿Ð°Ñ€Ð°ÑÐ¾Ð»ÑŒÐºÑƒ."
        case "thunderstorm":
            return "ÐœÐ¾Ð¶Ð»Ð¸Ð²Ð° Ð³Ñ€Ð¾Ð·Ð° â€” Ð±ÑƒÐ´ÑŒÑ‚Ðµ Ð¾Ð±ÐµÑ€ÐµÐ¶Ð½Ñ– Ñ‚Ð° ÑƒÐ½Ð¸ÐºÐ°Ð¹Ñ‚Ðµ Ð²Ñ–Ð´ÐºÑ€Ð¸Ñ‚Ð¸Ñ… Ð¿Ñ€Ð¾ÑÑ‚Ð¾Ñ€Ñ–Ð²."
        case "snow":
            return "Ð¡Ð½Ñ–Ð¶Ð¸Ñ‚Ð¸Ð¼Ðµ, Ð½Ð° Ð´Ð¾Ñ€Ð¾Ð³Ð°Ñ… ÑÐ»Ð¸Ð·ÑŒÐºÐ¾."
        case "fog", "mist":
            return "Ð’Ñ€Ð°Ð½Ñ†Ñ– Ð¼Ð¾Ð¶Ð»Ð¸Ð²Ð¸Ð¹ Ñ‚ÑƒÐ¼Ð°Ð½ â€” Ð²Ð¾Ð´Ñ–ÑÐ¼ Ð²Ð°Ñ€Ñ‚Ð¾ Ð±ÑƒÑ‚Ð¸ ÑƒÐ²Ð°Ð¶Ð½Ð¸Ð¼Ð¸."
        case "wind":
            return "Ð¡ÑŒÐ¾Ð³Ð¾Ð´Ð½Ñ– Ð²Ñ–Ñ‚Ñ€ÑÐ½Ð¾, Ð¾Ð´ÑÐ³Ð°Ð¹Ñ‚ÐµÑÑ Ñ‚ÐµÐ¿Ð»Ñ–ÑˆÐµ."
        case "heat":
            return "Ð¡Ð¿ÐµÐºÐ¾Ñ‚Ð½Ð¾, Ð¿Ð¸Ð¹Ñ‚Ðµ Ð±Ñ–Ð»ÑŒÑˆÐµ Ð²Ð¾Ð´Ð¸ Ñ‚Ð° ÑƒÐ½Ð¸ÐºÐ°Ð¹Ñ‚Ðµ ÑÐ¾Ð½Ñ†Ñ."
        default:
            return "ÐŸÐ¾Ð³Ð¾Ð´Ð½Ñ– ÑƒÐ¼Ð¾Ð²Ð¸ ÑÐ¿Ð¾ÐºÑ–Ð¹Ð½Ñ–, Ð¼Ð¾Ð¶Ð½Ð° Ð¿Ð»Ð°Ð½ÑƒÐ²Ð°Ñ‚Ð¸ ÑÐ¿Ñ€Ð°Ð²Ð¸ Ð½Ð° Ð´ÐµÐ½ÑŒ."
        }
    }
}









































import SwiftUI

struct WeatherDetailView: View {
    @ObservedObject var viewModel: WeatherViewModel
    @ObservedObject var favoritesVM: FavoritesViewModel
    @State private var cityInput: String = ""
    @State private var selectedSection: Int = 0
    @State private var forecastItem: String = ""
    
    var body: some View {
        GeometryReader { geometry in
            ZStack {
                LinearGradient(
                    gradient: Gradient(colors: [Color(red: 0.94, green: 0.98, blue: 1.0),
                                                Color(red: 0.86, green: 0.95, blue: 0.99)]),
                    startPoint: .topLeading,
                    endPoint: .bottomTrailing
                )
                .ignoresSafeArea()
                
                VStack(spacing: 12) {
                    
                    // TOP BAR: heart (left), title (center-left), section buttons (right)
                    HStack(alignment: .center, spacing: 12) {
                        // HEART button moved to left corner (uses current city if available)
                        Button(action: {
                            // toggle favorite for current city (if available)
                            if let current = viewModel.currentWeather?.name {
                                if favoritesVM.favoriteCities.contains(current) {
                                    if let idx = favoritesVM.favoriteCities.firstIndex(of: current) {
                                        favoritesVM.removeCity(atIndex: idx)
                                    }
                                } else {
                                    favoritesVM.addCity(current)
                                }
                            }
                        }) {
                            // heart reflects whether current city is in favorites
                            Image(systemName:
                                    (viewModel.currentWeather != nil && favoritesVM.favoriteCities.contains(viewModel.currentWeather!.name))
                                    ? "heart.fill" : "heart")
                                .font(.system(size: 20, weight: .semibold))
                                .foregroundColor((viewModel.currentWeather != nil && favoritesVM.favoriteCities.contains(viewModel.currentWeather!.name)) ? .red : .gray)
                                .padding(8)
                                .background(Color.white.opacity(0.9))
                                .cornerRadius(8)
                        }
                        .disabled(viewModel.currentWeather == nil) // disable until a city is loaded
                        
                        // Title & subtitle (kept left-ish)
                        VStack(alignment: .leading, spacing: 2) {
                            Text("ÐŸÐ¾Ð³Ð¾Ð´Ð°")
                                .font(.title2)
                                .fontWeight(.semibold)
                                .foregroundColor(.black)
                            Text("ÐŸÐ¾Ñ‚Ð¾Ñ‡Ð½Ñ– Ð´Ð°Ð½Ñ– Ñ‚Ð° Ð¿Ñ€Ð¾Ð³Ð½Ð¾Ð·")
                                .font(.caption)
                                .foregroundColor(.black.opacity(0.6))
                        }
                        
                        Spacer()
                        
                        // Section selector (right side) â€” ÐŸÐ¾Ñ‚Ð¾Ñ‡Ð½Ð° / â‰¡
                        HStack(spacing: 8) {
                            SectionButton(title: "ÐŸÐ¾Ñ‚Ð¾Ñ‡Ð½Ð°", isSelected: selectedSection == 0) {
                                selectedSection = 0
                            }
                            SectionButton(title: "â‰¡", isSelected: selectedSection == 1) {
                                selectedSection = 1
                            }
                        }
                    }
                    .padding(.horizontal)
                    .padding(.top, 16)
                    
                    // Search Row
                    HStack(spacing: 10) {
                        TextField("Ð’Ð²ÐµÐ´Ñ–Ñ‚ÑŒ Ð½Ð°Ð·Ð²Ñƒ Ð¼Ñ–ÑÑ‚Ð°", text: $cityInput)
                            .padding(10)
                            .background(Color.white)
                            .cornerRadius(8)
                            .foregroundColor(.black)
                            .overlay(RoundedRectangle(cornerRadius: 8).stroke(Color.black.opacity(0.06), lineWidth: 1))
                        
                        Button("ÐŸÐ¾ÑˆÑƒÐº") {
                            if !cityInput.isEmpty {
                                viewModel.fetchWeather(city: cityInput, lat: nil, lon: nil)
                                UIApplication.shared.endEditing()
                                cityInput = ""
                                selectedSection = 0
                            }
                        }
                        .padding(.vertical, 10)
                        .padding(.horizontal, 12)
                        .background(Color.blue)
                        .foregroundColor(.white)
                        .cornerRadius(8)
                    }
                    .padding(.horizontal)
                    
                    // Status / error
                    if viewModel.isLoading {
                        ProgressView("ÐžÐ½Ð¾Ð²Ð»ÐµÐ½Ð½Ñ Ð´Ð°Ð½Ð¸Ñ…â€¦")
                            .padding(.vertical, 6)
                    } else if let error = viewModel.errorMessage {
                        Text(error)
                            .font(.subheadline)
                            .foregroundColor(.red)
                            .padding(.vertical, 6)
                            .padding(.horizontal)
                            .background(Color.white)
                            .cornerRadius(8)
                    }
                    
                    // Content area (weather or favorites depending on selectedSection)
                    if selectedSection == 0 {
                        // WEATHER SCREEN
                        ScrollView(.vertical, showsIndicators: false) {
                            VStack(spacing: 16) {
                                if let weather = viewModel.currentWeather {
                                    VStack(spacing: 10) {
                                        Text(weather.name)
                                            .font(.largeTitle).bold()
                                            .foregroundColor(.black)
                                        
                                        Text("\(Int(weather.main.temp))Â°C")
                                            .font(.system(size: 64, weight: .thin))
                                            .foregroundColor(.black)
                                        
                                        Text(weather.weather.first?.description.capitalized ?? "")
                                            .font(.headline)
                                            .foregroundColor(.black.opacity(0.7))
                                        
                                        // secondary heart button inside card (kept for discoverability)
                                        Button {
                                            if favoritesVM.favoriteCities.contains(weather.name) {
                                                if let idx = favoritesVM.favoriteCities.firstIndex(of: weather.name) {
                                                    favoritesVM.removeCity(atIndex: idx)
                                                }
                                            } else {
                                                favoritesVM.addCity(weather.name)
                                            }
                                        } label: {
                                            HStack(spacing: 8) {
                                                Image(systemName: favoritesVM.favoriteCities.contains(weather.name) ? "heart.fill" : "heart")
                                                    .foregroundColor(favoritesVM.favoriteCities.contains(weather.name) ? .red : .gray)
                                                Text("Ð’Ð¸Ð±Ñ€Ð°Ð½Ñ–")
                                                    .foregroundColor(.black)
                                            }
                                            .padding(.vertical, 8)
                                            .padding(.horizontal, 12)
                                            .background(Color.white)
                                            .cornerRadius(10)
                                        }
                                        .padding(.top, 6)
                                    }
                                    .padding()
                                    .background(Color.white)
                                    .cornerRadius(12)
                                    .padding(.horizontal)
                                } else {
                                    Text("Ð’Ð²ÐµÐ´Ñ–Ñ‚ÑŒ Ð½Ð°Ð·Ð²Ñƒ Ð¼Ñ–ÑÑ‚Ð°")
                                        .multilineTextAlignment(.center)
                                        .padding()
                                        .foregroundColor(.black.opacity(0.7))
                                        .frame(maxWidth: .infinity)
                                        .background(Color.white)
                                        .cornerRadius(12)
                                        .padding(.horizontal)
                                }
                                
                                // Hourly forecast
                                if !viewModel.forecastItems.isEmpty {
                                    VStack(alignment: .leading, spacing: 8) {
                                        Text("ÐŸÐ¾Ð³Ð¾Ð´Ð¸Ð½Ð½Ð¸Ð¹ Ð¿Ñ€Ð¾Ð³Ð½Ð¾Ð·").font(.headline).foregroundColor(.black)
                                        ScrollView(.horizontal, showsIndicators: false) {
                                            HStack(spacing: 12) {
                                                ForEach(viewModel.forecastItems, id: \.dt) { item in
                                                    VStack(spacing: 4) {
                                                        Text(timeString(for: item))
                                                            .font(.subheadline)
                                                            .foregroundColor(.black)
                                                        
                                                        if let url = item.weather.first?.iconURL {
                                                            AsyncImage(url: url) { phase in
                                                                if let image = phase.image {
                                                                    image.resizable().scaledToFit().frame(width: 30, height: 30)
                                                                } else if phase.error != nil {
                                                                    Image(systemName: "cloud").resizable().scaledToFit().frame(width: 30, height: 30)
                                                                } else {
                                                                    ProgressView().frame(width: 30, height: 30)
                                                                }
                                                            }
                                                        } else {
                                                            Image(systemName: "cloud").resizable().scaledToFit().frame(width: 30, height: 30)
                                                        }
                                                        
                                                        Text("\(Int(item.main.temp))Â°C")
                                                            .font(.subheadline)
                                                            .foregroundColor(.black)
                                                    }
                                                    .padding(8)
                                                    .background(Color.white)
                                                    .cornerRadius(8)
                                                }
                                            }
                                            .padding(.horizontal)
                                        }
                                    }
                                    .padding(.horizontal)
                                }
                                
                                // Daily forecast
                                if !viewModel.dailyForecast.isEmpty {
                                    VStack(alignment: .leading, spacing: 10) {
                                        Text("5-Ð´ÐµÐ½Ð½Ð¸Ð¹ Ð¿Ñ€Ð¾Ð³Ð½Ð¾Ð·").font(.headline).foregroundColor(.black)
                                        ForEach(viewModel.dailyForecast, id: \.dt) { item in
                                            HStack {
                                                Text(item.dayOfWeekShort)
                                                    .frame(width: 60, alignment: .leading)
                                                    .foregroundColor(.black)
                                                
                                                if let url = item.weather.first?.iconURL {
                                                    AsyncImage(url: url) { phase in
                                                        if let image = phase.image {
                                                            image.resizable().scaledToFit().frame(width: 30, height: 30)
                                                        } else if phase.error != nil {
                                                            Image(systemName: "cloud").resizable().scaledToFit().frame(width: 30, height: 30)
                                                        } else {
                                                            ProgressView().frame(width: 30, height: 30)
                                                        }
                                                    }
                                                } else {
                                                    Image(systemName: "cloud").resizable().scaledToFit().frame(width: 30, height: 30)
                                                }
                                                
                                                Text("\(Int(item.main.temp))Â°C")
                                                    .foregroundColor(.black)
                                                Spacer()
                                            }
                                            .padding(.vertical, 6)
                                            .padding(.horizontal)
                                            .background(Color.white)
                                            .cornerRadius(8)
                                        }
                                    }
                                    .padding(.top, 6)
                                    .padding(.horizontal)
                                }
                                
                                Spacer(minLength: 30)
                            }
                            .padding(.top, 8)
                        }
                        .scrollBounceBehavior(.basedOnSize)
                    } else {
                        // FAVORITES SCREEN (simple list with delete)
                        VStack(spacing: 12) {
                            if favoritesVM.favoriteCities.isEmpty {
                                VStack(spacing: 12) {
                                    Image(systemName: "heart")
                                        .resizable()
                                        .scaledToFit()
                                        .frame(width: 56, height: 56)
                                        .foregroundColor(.red)
                                    Text("Ð£ Ð²Ð°Ñ Ñ‰Ðµ Ð½ÐµÐ¼Ð°Ñ” Ð²Ð¸Ð±Ñ€Ð°Ð½Ð¸Ñ… Ð¼Ñ–ÑÑ‚")
                                        .foregroundColor(.black.opacity(0.7))
                                }
                                .padding()
                                .frame(maxWidth: .infinity)
                                .background(Color.white)
                                .cornerRadius(12)
                                .padding(.horizontal)
                            } else {
                                ScrollView {
                                    VStack(spacing: 10) {
                                        ForEach(favoritesVM.favoriteCities.indices, id: \.self) { i in
                                            let city = favoritesVM.favoriteCities[i]
                                            HStack {
                                                Button(action: {
                                                    viewModel.fetchWeather(city: city, lat: nil, lon: nil)
                                                    selectedSection = 0
                                                }) {
                                                    HStack {
                                                        VStack(alignment: .leading) {
                                                            Text(city)
                                                                .font(.body)
                                                                .foregroundColor(.black)
                                                            Text("ÐÐ°Ñ‚Ð¸ÑÐ½Ñ–Ñ‚ÑŒ, Ñ‰Ð¾Ð± Ð¿ÐµÑ€ÐµÐ³Ð»ÑÐ½ÑƒÑ‚Ð¸")
                                                                .font(.caption)
                                                                .foregroundColor(.black.opacity(0.6))
                                                        }
                                                        Spacer()
                                                    }
                                                    .padding()
                                                    .background(Color.white)
                                                    .cornerRadius(8)
                                                }
                                                .buttonStyle(PlainButtonStyle())
                                                
                                                Button(action: {
                                                    favoritesVM.removeCity(atIndex: i)
                                                }) {
                                                    Image(systemName: "trash")
                                                        .foregroundColor(.red)
                                                        .padding(10)
                                                        .background(Color.white)
                                                        .cornerRadius(8)
                                                }
                                                .buttonStyle(PlainButtonStyle())
                                            }
                                            .padding(.horizontal)
                                        }
                                        Spacer(minLength: 20)
                                    }
                                    .padding(.top, 6)
                                }
                            }
                        }
                        .padding(.horizontal)
                    }
                    
                } // VStack
                .padding(.bottom, 8)
            } // ZStack
        } // GeometryReader
        .onAppear {
            if viewModel.currentWeather == nil {
                viewModel.requestUserLocation()
            }
        }
        .contentShape(Rectangle())
        .onTapGesture { UIApplication.shared.endEditing() }
    }
    
    // helper: format time from ForecastEntry.date
    private func timeString(for item: ForecastEntry) -> String {
        let formatter = DateFormatter()
        formatter.locale = Locale(identifier: "uk_UA")
        formatter.dateFormat = "HH:mm"
        return formatter.string(from: item.date)
    }
}

// MARK: - Simple Button used as section selector (visual only)
private struct SectionButton: View {
    let title: String
    let isSelected: Bool
    let action: () -> Void
    
    var body: some View {
        Button(action: action) {
            Text(title)
                .font(.subheadline)
                .fontWeight(.semibold)
                .padding(.vertical, 8)
                .padding(.horizontal, 12)
                .background(isSelected ? Color.white : Color.white.opacity(0.6))
                .foregroundColor(isSelected ? .blue : .black)
                .cornerRadius(8)
        }
        .buttonStyle(PlainButtonStyle())
    }
}



