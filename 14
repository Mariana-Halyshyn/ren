import SwiftUI

struct WeatherDetailView: View {
    @ObservedObject var viewModel: WeatherViewModel
    @ObservedObject var favoritesVM: FavoritesViewModel
    @State private var cityInput: String = ""

    var body: some View {
        GeometryReader { geometry in
            ZStack {
                LinearGradient(
                    gradient: Gradient(colors: [
                        Color(red: 0.94, green: 0.98, blue: 1.0),
                        Color(red: 0.86, green: 0.95, blue: 0.99)
                    ]),
                    startPoint: .topLeading,
                    endPoint: .bottomTrailing
                )
                .ignoresSafeArea()

                VStack(spacing: 12) {

                    // -------- Верхній бар ----------
                    HStack {
                        Button {
                            // кнопка "вибрані" (меню)
                        } label: {
                            Image(systemName: "line.3.horizontal")
                                .font(.title2)
                                .foregroundColor(.black)
                        }

                        Spacer()

                        Text("Прогноз погоди")
                            .font(.title2)
                            .fontWeight(.semibold)

                        Spacer()
                    }
                    .padding(.horizontal)
                    .padding(.top, 16)

                    // -------- Пошук ----------
                    HStack(spacing: 10) {
                        TextField("Введіть назву міста", text: $cityInput)
                            .padding(10)
                            .background(Color.white)
                            .cornerRadius(8)

                        Button("Пошук") {
                            if !cityInput.isEmpty {
                                viewModel.fetchWeather(city: cityInput, lat: nil, lon: nil)
                                UIApplication.shared.endEditing()
                                cityInput = ""
                            }
                        }
                        .padding(.horizontal, 14)
                        .padding(.vertical, 10)
                        .background(Color.blue)
                        .foregroundColor(.white)
                        .cornerRadius(8)
                    }
                    .padding(.horizontal)

                    // -------- Статус ----------
                    if viewModel.isLoading {
                        ProgressView("Оновлення даних…")
                            .padding(.vertical, 8)
                    } else if let error = viewModel.errorMessage {
                        Text(error)
                            .foregroundColor(.red)
                            .padding()
                            .background(Color.white)
                            .cornerRadius(8)
                    }

                    // -------- Основний скрол ----------
                    ScrollView(.vertical, showsIndicators: false) {
                        VStack(spacing: 18) {

                            // -------- Поточна погода ----------
                            if let weather = viewModel.currentWeather {
                                VStack(spacing: 8) {
                                    Text(weather.name)
                                        .font(.largeTitle)
                                        .bold()

                                    Text("\(Int(weather.main.temp))°C")
                                        .font(.system(size: 64, weight: .thin))

                                    Text(weather.weather.first?.description.capitalized ?? "")
                                        .foregroundColor(.gray)

                                    Button {
                                        if favoritesVM.favoriteCities.contains(weather.name) {
                                            if let i = favoritesVM.favoriteCities.firstIndex(of: weather.name) {
                                                favoritesVM.removeCity(atIndex: i)
                                            }
                                        } else {
                                            favoritesVM.addCity(weather.name)
                                        }
                                    } label: {
                                        HStack {
                                            Image(systemName:
                                                favoritesVM.favoriteCities.contains(weather.name)
                                                ? "heart.fill"
                                                : "heart"
                                            )
                                            .foregroundColor(.red)

                                            Text("Вибрані")
                                        }
                                        .padding(.horizontal, 12)
                                        .padding(.vertical, 8)
                                        .background(Color.white)
                                        .cornerRadius(10)
                                    }
                                }
                                .padding()
                                .background(Color.white)
                                .cornerRadius(14)
                                .padding(.horizontal)
                            }

                            // -------- Погодинний прогноз ----------
                            if !viewModel.forecastItems.isEmpty {
                                VStack(alignment: .leading, spacing: 8) {
                                    Text("Погодинний прогноз")
                                        .font(.headline)

                                    ScrollView(.horizontal, showsIndicators: false) {
                                        HStack(spacing: 12) {
                                            ForEach(
                                                Array(viewModel.forecastItems.enumerated()),
                                                id: \.element.dt
                                            ) { _, item in
                                                VStack(spacing: 6) {
                                                    Text(item.dateHourString)
                                                        .font(.caption)

                                                    Image(systemName: sfIcon(for: item.weather.first?.main))
                                                        .font(.title3)
                                                        .foregroundColor(.orange)

                                                    Text("\(Int(item.main.temp))°C")
                                                        .font(.subheadline)
                                                }
                                                .padding(8)
                                                .background(Color.white)
                                                .cornerRadius(10)
                                            }
                                        }
                                        .padding(.horizontal)
                                    }
                                }
                                .padding(.horizontal)
                            }

                            // -------- Опис погоди ----------
                            if let main = viewModel.currentWeather?.weather.first?.main {
                                HStack {
                                    Text(weatherDescriptionText(for: main))
                                        .font(.body)
                                    Spacer()
                                    Image(systemName: sfIcon(for: main))
                                        .font(.largeTitle)
                                        .foregroundColor(.orange)
                                }
                                .padding()
                                .background(Color.white)
                                .cornerRadius(12)
                                .padding(.horizontal)
                            }

                            // -------- 5-денний прогноз (без сьогодні) ----------
                            if viewModel.dailyForecast.count > 1 {
                                VStack(alignment: .leading, spacing: 10) {
                                    Text("Прогноз на 5 днів")
                                        .font(.headline)

                                    ForEach(
                                        Array(viewModel.dailyForecast.dropFirst().enumerated()),
                                        id: \.element.dt
                                    ) { _, item in
                                        HStack {
                                            Text(item.dayOfWeekShort)
                                                .frame(width: 50, alignment: .leading)

                                            Image(systemName: sfIcon(for: item.weather.first?.main))
                                                .foregroundColor(.orange)

                                            Text("\(Int(item.main.temp))°C")
                                            Spacer()
                                        }
                                        .padding()
                                        .background(Color.white)
                                        .cornerRadius(10)
                                    }
                                }
                                .padding(.horizontal)
                            }

                            Spacer(minLength: 30)
                        }
                        .padding(.top, 8)
                    }
                }
            }
        }
        .onAppear {
            if viewModel.currentWeather == nil {
                viewModel.requestUserLocation()
            }
        }
        .onTapGesture {
            UIApplication.shared.endEditing()
        }
    }
}

//
// MARK: - Допоміжні функції
//

private func sfIcon(for condition: String?) -> String {
    switch condition {
    case "Clear": return "sun.max.fill"
    case "Clouds": return "cloud.fill"
    case "Rain": return "cloud.rain.fill"
    case "Drizzle": return "cloud.drizzle.fill"
    case "Thunderstorm": return "cloud.bolt.rain.fill"
    case "Snow": return "snow"
    case "Mist", "Fog": return "cloud.fog.fill"
    default: return "cloud"
    }
}

private func weatherDescriptionText(for condition: String) -> String {
    switch condition {
    case "Clear":
        return "Сьогодні сонячно та тепло — ідеальний день для прогулянок."
    case "Clouds":
        return "На небі хмари, але без опадів — погода спокійна."
    case "Rain":
        return "Сьогодні дощитиме, не забудьте прихопити парасольку."
    case "Thunderstorm":
        return "Можлива гроза — будьте обережні та уникайте відкритих просторів."
    case "Snow":
        return "Сніжитиме, на дорогах може бути слизько."
    default:
        return "Погодні умови стабільні."
    }
}
